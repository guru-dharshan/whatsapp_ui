<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalChat">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#E6E5E5">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#EEF4B1"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ic_lock"
                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="30dp"
                android:textColor="#AFAFAF"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textStyle="normal"
                android:text="Messages to this chat and calls are now secured with ene-to-end encryption. Tap for more info.">
            </TextView>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="#02603D">
        <ImageView
            android:id="@+id/backbut"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp">
        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/mdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/person1"
            android:layout_gravity="center"
            >
        </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="90dp"
            android:textSize="20dp"
            android:text="Person name"
            android:textColor="#ffffff"
            android:textStyle="normal">
        </TextView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_videocam"
            android:layout_gravity="right"
            android:layout_marginRight="95dp"
            android:layout_marginTop="20dp"
            >
        </ImageView>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_round"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            >
        </ImageView>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_round"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="27dp"
            >
        </ImageView>
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_round"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="34dp"
            >
        </ImageView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_caller"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            >
        </ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="55dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp">
        <ImageView
            android:id="@+id/mface"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_face"
            android:layout_gravity="center_vertical"
            >
        </ImageView>
        <EditText
            android:id="@+id/mmsg"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:hint="Type a message"
            android:textStyle="normal"
            android:textColor="#000000"
            android:textSize="15dp">
        </EditText>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/mattach"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="230dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_attach">
        </ImageView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/mcamera"
            android:layout_marginStart="260dp"
            android:layout_marginLeft="230dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera24">
        </ImageView>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="23dp"
            app:cardBackgroundColor="#027A4E"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="310dp"
            android:layout_marginLeft="300dp"
            android:layout_marginEnd="30dp"
            android:onClick="mssend"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:id="@+id/msend"
                android:padding="5dp"
                android:src="@drawable/ic_send"
                android:onClick="mssend">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>